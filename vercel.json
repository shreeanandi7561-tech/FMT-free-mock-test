{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "/api/auth/$1.js" },
    { "src": "/api/tests/(.*)", "dest": "/api/tests/$1.js" },
    { "src": "/api/generate-mcq", "dest": "/api/generate-mcq.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
